{
  "productName": "plenty",
  "version": "0.0.3",
  "identifier": "studio.darksoil.plenty",
  "build": {
    "beforeBuildCommand": "pnpm -F lobby build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../lobby/dist"
  },
  "app": {
    "security": {
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["plenty"]
      }
    }
  }
}
